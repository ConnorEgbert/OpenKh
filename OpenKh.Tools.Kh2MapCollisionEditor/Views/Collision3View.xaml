<UserControl x:Class="OpenKh.Tools.Kh2MapCollisionEditor.Views.Collision3View"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OpenKh.Tools.Kh2MapCollisionEditor.Views"
             xmlns:controls="clr-namespace:Xe.Tools.Wpf.Controls;assembly=Xe.Tools.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="100">
    <controls:TwoColumnsPanel>
        <TextBlock Text="v00"/>
        <TextBox Text="{Binding v00}"/>
        <TextBlock Text="Vtx1"/>
        <TextBox Text="{Binding Vertex1}"/>
        <TextBlock Text="Vtx2"/>
        <TextBox Text="{Binding Vertex2}"/>
        <TextBlock Text="Vtx3"/>
        <TextBox Text="{Binding Vertex3}"/>
        <TextBlock Text="Vtx4"/>
        <TextBox Text="{Binding Vertex4}"/>
        <TextBlock Text="v0a"/>
        <TextBox Text="{Binding v0a}"/>
        <TextBlock Text="v0c"/>
        <TextBox Text="{Binding v0c}"/>
        <TextBlock Text="v0e"/>
        <TextBox Text="{Binding v0e}"/>
    </controls:TwoColumnsPanel>
</UserControl>
